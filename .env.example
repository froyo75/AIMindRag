# LLM Configuration
LLM_CONFIG_DIR_PATH=./config
LLM_DEFAULT_PROVIDER=ollama
LLM_DEFAULT_EMBEDDING_PROVIDER=ollama
LLM_DEFAULT_MODEL=llama3.1:8b
LLM_DEFAULT_EMBEDDING_MODEL=mxbai-embed-large
LLM_DEFAULT_MAX_TOKENS = 2048
LLM_DEFAULT_TEMPERATURE = 1
